# Railway Production Environment Variables
# Copy these to Railway's environment variables

# Application
APP_NAME=Laravel
APP_ENV=production
APP_KEY=                    # Leave empty - will be auto-generated on first deploy
APP_DEBUG=false             # Set to true temporarily if debugging
APP_TIMEZONE=UTC
APP_URL=https://quiz-deployment-production.up.railway.app
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

# PHP
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error             # Use 'error' for production, 'debug' for debugging

# Database (MySQL from Railway)
# Railway provides MYSQL* variables, map them to Laravel's DB_* variables:
DB_CONNECTION=mysql
DB_HOST=${{MYSQLHOST}}
# Or use: DB_HOST=${{RAILWAY_PRIVATE_DOMAIN}}
DB_PORT=${{MYSQLPORT}}
# Or use: DB_PORT=3306
DB_DATABASE=${{MYSQLDATABASE}}
# Or use: DB_DATABASE=${{MYSQL_DATABASE}}
DB_USERNAME=root
# Note: If MYSQLUSER is empty, use "root" as the username
DB_PASSWORD=${{MYSQL_ROOT_PASSWORD}}
# Or use: DB_PASSWORD=${{MYSQLPASSWORD}}

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

